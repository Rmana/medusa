- organization = edit_organization
- organization_counter = edit_organization_counter
- base_id = "organization_#{organization_counter}"

%span.organization.contributor{:id=>base_id}
  %ol.multi_inline{:id=>"#{base_id}_role_and_name"}
    %li
      %dl
        %dt
          = fedora_field_label("descMetadata", [{:organization => organization_counter}, :role, :text], "Role:")
        %dd
          = fedora_text_field(@document_fedora,"descMetadata", [{:organization => organization_counter}, :role, :text])
    %li
      %dl  
        %dt
          = fedora_field_label("descMetadata", [{:organization => organization_counter}, :namePart], "Organization:")
        %dd
          = fedora_text_field(@document_fedora,"descMetadata", [{:organization => organization_counter}, :namePart])

