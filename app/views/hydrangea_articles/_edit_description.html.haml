    = editable_metadata_field(@document_fedora, "descMetadata", :end_page, :label => "End Page:")
    
    = editable_metadata_field(@document_fedora, "descMetadata", :original_url, :label => "Original URL:")
    
    = editable_metadata_field(@document_fedora, "descMetadata", :topic_tag, :label => "Topic Tags:")
