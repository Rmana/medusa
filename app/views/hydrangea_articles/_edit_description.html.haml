    = editable_metadata_field(@document_fedora, "descMetadata", :journal_title, :label => "Journal Title:")
    = editable_metadata_field(@document_fedora, "descMetadata", :publisher, :label => "Publisher:")
    = editable_metadata_field(@document_fedora, "descMetadata", :issn, :label => "ISSN:")
