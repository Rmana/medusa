
<form id="document_metadata" action="<%= url_for(:action=>"update", :controller=>"assets", :content_type=>"hydrangea_article")%>" method="post" data-resourceType="hydrangea_article" accept-charset="utf-8">

    <input id="content_type" type="hidden" name="content_type" value="hydrangea_article" />
    <h3><%= fedora_field_label("descMetadata", [:title_info, :main_title], "Title") %></h3>
    <%= fedora_text_field(@document_fedora,"descMetadata", [:title_info, :main_title], :multiple=>false) %>

	<h3><%= fedora_field_label("descMetadata", [:journal], "Publication Details") %>
	<%= render :partial=>"hydrangea_articles/edit_journal", :collection=>@document_fedora.datastreams_in_memory["descMetadata"].find_by_terms(:journal) %>
	
	<h3>Contributors</h3>
    <ol>
      <%= render :partial=>"contributors/edit_person", :collection=>@document_fedora.datastreams_in_memory["descMetadata"].find_by_terms(:person) %>
      <%= render :partial=>"contributors/edit_organization", :collection=>@document_fedora.datastreams_in_memory["descMetadata"].find_by_terms(:organization) %>
      <%= render :partial=>"contributors/edit_conference", :collection=>@document_fedora.datastreams_in_memory["descMetadata"].find_by_terms(:conference) %>
    </ol>    
    <%# Button for adding person/conference/organization %>
    <% if params[:action] == "edit" %>
      <% format = document_partial_name(@document) %>
      <div id="add-contributor-box">
        <input id="re-run-add-contributor-action" type="button" value="Add a person" />
        <button id="select-contributor-type" type="button">Select type of contributor to add</button>
        <ul id="add-contributor-menu">
          <li id="add_person">Add a person</li>
          <li id="add_organization">Add an organization</li>
          <li id="add_conference">Add a conference</li>
        </ul>
      </div>
    <% end %>

  <h3>Abstract</h3>
  <%= fedora_text_area(@document_fedora,"descMetadata", [:abstract], :multiple=>false) %>

  <h3><%= fedora_field_label("descMetadata", [:subject, :topic], "Keywords") %></h3>
  <div id="topic_tag" class="topic_tag">
        <%= fedora_text_field(@document_fedora,"descMetadata", [:subject, :topic], :multiple=>true) %>
   </div>


<h3 class="section-title">Release the Article</h3>
<h4>
	<%= fedora_field_label("rightsMetadata", [:copyright, :uvalicense], "UVA Preservation License") %>
</h4>
<div id="uvalicense" class="license">
	<%= fedora_select(@document_fedora, "rightsMetadata", [:copyright, :uvalicense], :choices => %w(yes no))   %>    
 	<br /><label for="license">
     I grant UVA rights to this work under the UVA Preservation License
    </label>
	To properly administer this repository and preserve the contents for future use,
the University of Virginia (UVA) requires certain permissions from you, the
author(s) or copyright owner. By accepting this license, you still retain copyright
to your work. You do not give up the right to submit the work to publishers or
other repositories.
<%= link_to "Read complete license agreement", "#" %>
</div>

 <h4>
	<%= fedora_field_label("rightsMetadata", [:copyright, :cclicense], "Creative Commons Attribution License") %>
</h4>
<div id="cclicense" class="license">	
	<%= fedora_select(@document_fedora, "rightsMetadata", [:copyright, :cclicense], :choices => %w(yes no))   %>    
	<br />
	<label for="license creative commons attribution">
		Creative Commons Attribution License
	</label>
	<%= link_to "Read complete license agreement", "#" %>
</div>
</form>

<h3 class="section-title">Permissions</h3>
<%#= render :partial => "permissions/index", :locals => {:document => @document_fedora, :asset_id=>params[:id]} %>

<form id="document_metadata" action="<%= url_for(:action=>"update", :controller=>"assets", :content_type=>"hydrangea_article")%>" method="post" data-resourceType="hydrangea_article" accept-charset="utf-8">
  <input name="_method" type="hidden" value="put" />
  <%= fedora_field_label("properties", [:release_to], "Release to") %>
	
  <%= fedora_select(@document_fedora, "properties", [:release_to], :choices => {"Public" => "public", "UVA Only"=>"registered"})   %>    
	
<div id="actions">
	<div id="primary_action">
	  <!-- Careful! Submitting this hidden input will release the article.  -->
	  <%= tag(:input, :type=>"hidden", :name=>"asset[properties][released][0]", :value=>"true")%>
		<%= button_to 'Release this work for UVA Library Circulation' %>
	</div>
	<div id="secondary_action">
		<%= delete_asset_link(params[:id], "article") %>
	</div>
</div>
</form>
