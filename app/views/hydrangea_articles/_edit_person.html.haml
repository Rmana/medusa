- person = edit_person
- person_counter = edit_person_counter
- base_id = "person_#{person_counter}"

%span.person.contributor{:id=>base_id}
  %ol.multi_inline{:id=>"#{base_id}_role_and_name"}
    %li
      %dl
        - person_role = editable_metadata_field(@document_fedora, "descMetadata", [{:person=>person_counter}, :role, :text], :label => "Role:") 
        %dt
          %label{:for=>"#{base_id}_role"}
            = person_role[:label]
        %dd{:id=>"#{base_id}_role"}
          = person_role[:field]  
    %li
      %dl
        %dt.multi_inline
          %label{:for=>"#{base_id}_name"}
            Name:
        %dd.multi_inline.person{:id=>"#{base_id}_name"}
          %ol{:id=>"#{base_id}_name_fields"}
            %li.name_first
              - first_name = editable_metadata_field(@document_fedora, "descMetadata", [{:person=>person_counter}, :first_name], :label => "First Name") 
              %label{:for=>"#{base_id}_first_name"}
                = first_name[:label]
              %span.field{:id=>"#{base_id}_first_name"}
                = first_name[:field]
            %li.name_last
              - last_name = editable_metadata_field(@document_fedora, "descMetadata", [{:person=>person_counter}, :last_name], :label => "Last Name")
              %label{:for=>"#{base_id}_last_name"}
                = last_name[:label]
              %span.field{:id=>"#{base_id}_last_name"}
                = last_name[:field]
            %li.affiliation
              - institution = editable_metadata_field(@document_fedora, "descMetadata", [{:person=>person_counter}, :institution], :label => "Institution:")
              %label{:for=>"#{base_id}_affiliation"}
                = institution[:label]
              %span.field{:id=>"#{base_id}_affiliation"}
                = institution[:field]