- person = edit_person
- person_counter = edit_person_counter
- base_id = "person_#{person_counter}"

%span.person.contributor{:id=>base_id}
  
  - if params[:action] == "edit"
    / Generate only the field selectors and delete button for this person entry
    = field_selectors_for("descMetadata", [{:person=>person_counter}])
    %a.destructive.contributor{:href=>asset_contributor_path(@document_fedora.pid, "person", person_counter)} X
  
  %ol.multi_inline{:id=>"#{base_id}_role_and_name"}
    %li
      %dl
        %dt
          = fedora_field_label("descMetadata", [{:person=>person_counter}, :role, :text], "Role:")
        %dd{:id=>"#{base_id}_role"}
          = fedora_select(@document_fedora,"descMetadata", [{:person=>person_counter}, :role, :text], :choices=>Hydra::ModsArticle.common_relator_terms.values)
    %li
      %dl
        %dt.multi_inline
          %label{:for=>"#{base_id}_name"}
            Name:
        %dd.multi_inline.person{:id=>"#{base_id}_name"}
          %ol{:id=>"#{base_id}_name_fields"}
            %li.name_first
              = fedora_field_label("descMetadata", [{:person=>person_counter}, :first_name], "First Name")
              = fedora_text_field(@document_fedora,"descMetadata", [{:person=>person_counter}, :first_name], :multiple=>false)
            %li.name_last
              = fedora_field_label("descMetadata", [{:person=>person_counter}, :last_name], "Last Name")
              = fedora_text_field(@document_fedora,"descMetadata", [{:person=>person_counter}, :last_name], :multiple=>false)
            %li.affiliation
              = fedora_field_label("descMetadata", [{:person=>person_counter}, :institution], "Institution")
              = fedora_text_field(@document_fedora,"descMetadata", [{:person=>person_counter}, :institution], :multiple=>false)