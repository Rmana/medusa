.document_viewer#cover_container
  %dl.defList
    = get_data_with_label(document, "ID:", 'id') 
    = get_data_with_label(document, "Researcher:", 'person_t')
    = get_data_with_label(document, "Researcher Contact Info:", 'person_contact_info_t') 
    = get_data_with_label(document, "Researcher Organization:", 'person_organization_t')
    = get_data_with_label(document, "Abstract:", 'abstract_t')
    %dt Download:
    %dd#downloads
      %ul
    = get_data_with_label(document, "Copyright:", 'rights_t') 

%div{:class=>"#{params[:action]}_details"}
  = render :partial => "hydrangea_articles/#{params[:action]}_details", :locals => {:document => document}

- sidebar_items << capture do 
  = render :partial=>"catalog/_show_partials/facets", :locals=>{:document=>document, :facets_display_heading => "This document refers to:"}

= async_load_tag(asset_downloads_path(params[:id]), 'downloads')