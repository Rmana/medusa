<div class="document thumbnail">  
  <%= link_to_document(document, :label => image_tag(hydra_djatoka_url_for(document, :scale=>"100"), :size=>"100x125", :alt=>"thumbnail"), :counter => (counter + 1 + @response.params[:start].to_i)) %>
  <% if document.get(Blacklight.config[:show][:heading]) %>
    <%= link_to_document(document, :label => truncate(document.get(Blacklight.config[:show][:heading]), :length => 20, :omission => "..."), :counter => (counter + 1 + @response.params[:start].to_i)) -%>
  <% end -%>
  <%= document['date_t'] %>
</div>