<div id="collection-id-box" class="location-browse">
  <h2 class="title"> <%=h document["collection"] %></h2>
  <ul class="containers horizontal">
    <li class="first"> 
      <%= link_to_multifacet("Series #{document["series_facet"]}", "series_facet" => document["series_facet"])  %> 
    </li>
    <li>
      > <%= link_to_multifacet(document['box_facet'],  "series_facet" => document["series_facet"], "box_facet" => document["box_facet"]) %>
    </li>
    <li>
      > <%= link_to_multifacet(document['folder_facet'],  "series_facet" => document["series_facet"], "box_facet" => document["box_facet"], "folder_facet" => document["folder_facet"]) %>
    </li>
    <li>(<%= @folder_siblings.total %> Documents)</li>
  </ul>
  
  <ul class="folder_siblings">
    <% if @folder_siblings %>
      <%= render :partial=>"folders/document", :collection=>@folder_siblings.docs %>
    <% else %>
      <span class="error">Location info is incomplete.  Could not find adjacent documents.</span>
    <% end %>
  </ul>
  
  <ul class="links horizontal">
    <li><%= link_to("Collection Home", "")%> </li>
    <li>Finding Aid</li>
    <li>Access</li>
  </ul>
</div>