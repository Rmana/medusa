<% # container for all documents in index view -%>
<div id="documents">
  <script type="text/javascript" src="http://www.google.com/jsapi"></script>
  <script type="text/javascript">
    var id_array = new Array();
    var standard_nums = new Array();
  </script>
  <% # loop thru each doc -%>
  <% @response.docs.each_with_index do |document,counter| %>

    <% # container for a single doc -%>
    <div class="document <%= cycle("even","odd")%>">
      <% # header bar for doc items in index view -%>
      <div class="documentHeader yui-g">
        
        <% # list controls for items/docs -%>
        <div class="yui-u documentFunctions">
          <%= render :partial=>'bookmark_control', :locals=>{:document=>document} %>
        </div>
        
        <% # main title container for doc partial view -%>

        <div class="yui-u">
          <h3 class="index_title"><%= counter + 1 + @response.params[:start].to_i %>. <%= link_to_document document, :label=>document['title_facet'] ? document['title_facet'].to_s : document_show_link_field, :counter => (counter + 1 + @response.params[:start].to_i) %></h3>        
        </div>
      </div>
      <%# book_cover =  render :partial => "catalog/book_cover" , :locals => {:doc => document}-%>
      <%#= link_to_document document, :label=>  book_cover, :counter => (counter + 1 + @response.params[:start].to_i) -%>
      <% # main container for doc partial view -%>
      <%= render_document_partial document, :index %>

    </div>
    
  <% end %>
</div>